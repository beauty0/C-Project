using System;

namespace averagescore
{
    class Program
    {
    //Two students take a C# exam, and their results are assigned to two variables: 
//int mark1 = 44;
//int mark2 = 51;

        static void Main(string[] args)
        {
            int mark1 = 44;

            int mark2 = 51;

            double result = (mark1 + mark2) / 2.0;
            Console.WriteLine("The average of both student scores {0}, {1}, is: {2} ",
            mark1, mark2,  result);
            Console.ReadLine();
        }
    }
}
